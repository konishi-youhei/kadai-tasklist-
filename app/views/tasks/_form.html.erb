<div class="row">
  <div class="col-xs-6">
    <%= form_for(task) do |f| %>
      <% if task.errors.any? %>
        <div class="alert alert-warning">
          <ul>
            <% task.errors.full_messages.each do |task| %>
              <li><%= task %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
</div>

<div class="row">
  <div class="form-group">
    <div class="col-xs-12 col-sm-offset-2 col-sm-offset-8 col-sm-offset-3 col-sm-6">
      <%= f.label :status, 'ステータス' %>
      <%= f.text_field :status, class: 'form-control' %>
    </div>
  </div>
    
  <div class="form-group">
    <div class="col-xs-12 col-sm-offset-2 col-sm-offset-8 col-sm-offset-3 col-sm-6">
      <%= f.label :content, 'タスク' %>
      <%= f.text_field :content, class: 'form-control' %>
    </div>
  </div>
  
  <div class="form-group">
  　<div class="col-xs-12 col-sm-offset-2 col-sm-offset-8 col-sm-offset-3 col-sm-6">
    　<%= f.submit '投稿', class: 'btn btn-primary' %>
    　<% end %>
  　</div>
  </div>
</div>